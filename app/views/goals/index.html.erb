<h1>Listing goals</h1>

<table>
  <tr>
    <th>Date time</th>
    <th>Player</th>
    <th>Match</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @goals.each do |goal| %>
  <tr>
    <td><%= goal.date_time %></td>
    <td><%= goal.player_id %></td>
    <td><%= goal.match_id %></td>
    <td><%= link_to 'Show', goal %></td>
    <td><%= link_to 'Edit', edit_goal_path(goal) %></td>
    <td><%= link_to 'Destroy', goal, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

