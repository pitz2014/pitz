<li>
  <%= link_to image_tag(stadium.image_url , alt: stadium.name, size: 50), stadium %>
  <ul class="span8">
  	<li><%= link_to stadium.name, stadium %></li>
    <li><%= stadium.city %></li>
    <li><%= stadium.owner_club %></li>
    <li><%= stadium.status %></li>
  </ul>
  <% if current_user.admin? %>
    | <%= link_to "delete", stadium, method: :delete,
                                  data: { confirm: "You sure?" } %>
  <% end %>
</li>      